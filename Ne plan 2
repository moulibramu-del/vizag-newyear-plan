<script>
    const audio = document.getElementById('bgMusic');
    const splash = document.getElementById('splash');
    const container = document.getElementById('planContainer');
    audio.volume = 0.35;

    document.body.addEventListener('click', function revealPlan() {
        // Remove splash
        splash.style.opacity = '0';
        setTimeout(() => { splash.style.display = 'none'; }, 600);

        // Show plan with fade in
        container.style.display = 'block';
        setTimeout(() => { container.style.opacity = '1'; }, 100);

        // Enable scroll & auto scroll to top
        document.body.style.overflow = 'auto';
        document.body.style.alignItems = 'flex-start';
        document.body.style.paddingTop = '20px';

        // Automatic smooth scroll to top of plan
        container.scrollIntoView({ behavior: 'smooth', block: 'start' });

        // Play music
        if (audio.paused) {
            audio.play().then(() => {
                audio.currentTime = 25;
            }).catch(e => console.log("Music play issue"));
        }

        // Remove listener after first click
        document.body.removeEventListener('click', revealPlan);
    });

    // Try autoplay (fails on mobile without interaction)
    audio.play().catch(() => {});
</script>

